{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../ui/src/*"]
    }
  },
  "include": [
    "../ui/next-env.d.ts",
    "../ui/**/*.ts",
    "../ui/**/*.tsx",
    "../ui/.next/types/**/*.ts"
  ],
  "exclude": ["../ui/node_modules"]
}
